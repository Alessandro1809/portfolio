---
import Layout from "@/layouts/Layout.astro";
import ContactSection from "@/components/ui/ContactSecction.astro";
import WorkTimeline from "@/components/react/TimeLine";
import ImageCard from "@/components/cards/ImageCard.astro";
import SocialApps from "@/components/ui/SocialApps.astro";
import Button from "@/components/ui/buttons/Button.astro";
import CV from "@/assets/docs/CV-Alessandro_Diaz.pdf";
import { defaultLang, translations, type Language } from "@/lib/i18n";

const lang = (Astro.locals.lang as Language | undefined) ?? defaultLang;
const t = translations[lang];
---

<Layout title={t.seo.pages.hireTitle} description={t.seo.pages.hireDescription}>
    <div class="pt-44 relative max-w-7xl container mx-auto">
        <div class="px-4 text-center md:mb-12 mb-28">
            <h1 class="text-3xl md:text-5xl font-semibold">
                {t.seo.pages.hireTitle}
            </h1>
            <p class="mt-3 text-sm md:text-base text-neutral-400">
                {t.seo.pages.hireDescription}
            </p>
        </div>
        <div
            class="grid grid-cols-1 md:grid-cols-2 items-center justify-center"
        >
            <div class="-mt-24 justify-center flex flex-col items-center mb-12">
                <ImageCard />
                <SocialApps />
                <div class="mt-6 max-w-4xl mx-auto">
                    <Button
                        href={CV}
                        text={t.hireMe.downloadMyCv}
                        downloadAttr={true}
                        downloadAttributeValue="CV-Alessandro_Diaz.pdf"
                        target="_blank"
                        ariaLabel={t.hireMe.downloadMyCv}
                    />
                </div>
            </div>

            <ContactSection />
        </div>

        <div class="min-h-screen relative mx-4">
            <div
                class="absolute h-full w-full bg-[radial-gradient(#00D47C_.5px,transparent_1px)] bg-size-[32px_32px] mask-[radial-gradient(ellipse_40%_50%_at_50%_50%,#000_70%,transparent_100%)]"
            >
            </div>

            <WorkTimeline client:only="react" timeline={t.timeline} />
        </div>
    </div>
</Layout>
