---
import avatar2 from "@/assets/avatar2.png";
import { defaultLang, translations, type Language } from "@/lib/i18n";

const lang = (Astro.locals.lang as Language | undefined) ?? defaultLang;
const t = translations[lang];
---

<section
    class="flex items-center justify-center p-4 sm:p-6 md:p-8 pt-12 sm:pt-16 md:pt-20"
>
    <div
        class="relative w-72 h-80 sm:w-80 sm:h-96 md:w-80 md:h-96 lg:w-96 lg:h-[28rem]"
    >
        <div
            class="absolute h-24 sm:h-28 md:h-32 w-auto rounded-full top-72 sm:top-80 md:top-80 lg:top-96 -translate-x-12 sm:-translate-x-16 md:-translate-x-20 inset-0 z-0 blur-3xl bg-linear-to-br from-purple-500 to-primary-green"
        >
        </div>
        <article
            class="absolute inset-0 bg-teal-800 rounded-2xl sm:rounded-3xl shadow-2xl transform rotate-8 translate-x-6 sm:translate-x-8 -translate-y-4 sm:-translate-y-6 opacity-40"
            data-aos="fade-right"
            data-aos-duration="300"
            data-aos-delay="100"
            data-aos-once="true"
        >
        </article>

        <article
            class="absolute inset-0 bg-teal-700 rounded-2xl sm:rounded-3xl shadow-2xl transform rotate-5 translate-x-2 sm:translate-x-3 -translate-y-2 sm:-translate-y-3 opacity-60"
            data-aos="fade-right"
            data-aos-duration="400"
            data-aos-delay="200"
            data-aos-once="true"
        >
        </article>

        <div
            class="w-full h-full bg-[#0a0a0a] relative rounded-2xl sm:rounded-3xl overflow-hidden transform -translate-x-0.5 rotate-2"
            data-aos="fade-right"
            data-aos-duration="500"
            data-aos-delay="300"
            data-aos-once="true"
        >
            {/* Cosmic Aurora */}
            <div
                class="absolute inset-0 z-0"
                style={{
                    backgroundImage: `
        radial-gradient(ellipse at 20% 30%, rgba(87, 240, 255, 0.4) 0%, transparent 60%),
        radial-gradient(ellipse at 80% 70%, rgba(0, 153, 90, 0.3) 0%, transparent 70%),
        radial-gradient(ellipse at 60% 20%, rgba(102, 235, 173, 0.25) 0%, transparent 50%),
        radial-gradient(ellipse at 40% 80%, rgba(0, 191, 111, 0.2) 0%, transparent 65%)
      `,
                }}
            >
            </div>
            <article
                class="absolute inset-0 shadow-2xl flex flex-col items-center justify-center p-4 sm:p-6 md:p-8 z-10"
            >
                <div
                    class="w-40 sm:w-48 md:w-58 lg:w-64 h-auto bg-linear-to-br from-primary-green to-[#57F0FF] rounded-full flex items-center justify-center shadow-lg mb-4 sm:mb-5 md:mb-6 overflow-hidden"
                >
                    <img
                        class="w-32 sm:w-40 md:w-48 lg:w-56 h-auto"
                        src={avatar2.src}
                        alt="Alessandro Diaz"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
                <h1
                    class="text-xl sm:text-2xl md:text-2xl lg:text-3xl font-bold text-white mb-1 sm:mb-2"
                >
                    Alessandro Diaz
                </h1>
                <p class="text-sm sm:text-base text-teal-100 text-center">
                    {t.profile.title}
                </p>
            </article>
        </div>
    </div>
</section>
