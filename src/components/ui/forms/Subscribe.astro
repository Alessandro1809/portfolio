---
import { defaultLang, translations, type Language } from "@/lib/i18n";

const lang = (Astro.locals.lang as Language | undefined) ?? defaultLang;
const t = translations[lang];
const privacyPrefix = t.blogSubscribe.privacyNotePrefix ?? "";
const privacyLink = t.blogSubscribe.privacyNoteLink ?? "";
const privacySuffix = t.blogSubscribe.privacyNoteSuffix ?? "";
---

<section class="container mx-auto px-4 pb-24">
    <div class="relative overflow-hidden rounded-3xl border border-white/10 bg-linear-to-br from-white/5 via-white/2 to-black/50 p-8 md:p-12">
        <div
            class="absolute -right-12 -top-16 h-64 w-64 rounded-full bg-linear-to-br from-primary-green/30 to-purple-500/20 blur-[90px]"
        >
        </div>
        <div class="relative z-10 grid gap-8 md:grid-cols-[1.2fr_1fr] md:items-center">
            <div>
                <p class="text-sm uppercase tracking-[0.2em] text-primary-green">
                    {t.blogSubscribe.kicker}
                </p>
                <h3 class="mt-3 text-2xl md:text-4xl font-semibold">
                    {t.blogSubscribe.heading}
                </h3>
                <p class="mt-4 text-sm text-neutral-300 leading-relaxed">
                    {t.blogSubscribe.description}
                </p>
                <p class="mt-4 text-xs text-neutral-400">
                    {privacyPrefix}{" "}
                    <a
                        href="/unsubscribe"
                        class="text-neutral-300 underline decoration-primary-green/40 underline-offset-4 transition-colors hover:text-primary-green"
                    >
                        {privacyLink}
                    </a>
                    {privacySuffix}
                </p>
            </div>
            <form
                id="subscribe-form"
                class="flex flex-col gap-4"
                data-sending-text={t.blogSubscribe.sending}
                data-success-text={t.blogSubscribe.success}
                data-already-text={t.blogSubscribe.already}
                data-error-text={t.blogSubscribe.errorGeneric}
                data-error-prefix={t.blogSubscribe.errorPrefix}
                data-success-prefix={t.blogSubscribe.successPrefix}
            >
                <div class="flex flex-col gap-2">
                    <label for="subscribe-email">{t.blogSubscribe.emailLabel}</label>
                    <input
                        id="subscribe-email"
                        name="email"
                        type="email"
                        required
                        placeholder={t.blogSubscribe.emailPlaceholder}
                        class="w-full p-3 border border-white/10 rounded-xl bg-black/40 focus:outline-none focus:ring-2 focus:ring-primary-green"
                    />
                </div>
                <button
                    type="submit"
                    class="w-full py-3 rounded-full border border-primary-green/60 text-primary-green font-semibold tracking-wide hover:bg-primary-green hover:text-dark-green transition-all duration-300"
                >
                    {t.blogSubscribe.submit}
                </button>
                <div id="subscribe-message" class="hidden mt-2 p-3 rounded-md text-sm"></div>
            </form>
        </div>
    </div>
</section>

<script>
    import { actions } from 'astro:actions';

    const setupSubscribeForm = () => {
        const form = document.getElementById('subscribe-form') as HTMLFormElement | null;
        const messageDiv = document.getElementById('subscribe-message');

        if (!form || form.dataset.listenerAttached) return;
        form.dataset.listenerAttached = 'true';

        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(form);
            const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
            const originalContent = submitButton.innerHTML;
            const sendingText = form.dataset.sendingText ?? 'Subscribing...';
            const successText = form.dataset.successText ?? 'Subscription confirmed.';
            const alreadyText = form.dataset.alreadyText ?? 'You are already subscribed.';
            const errorText = form.dataset.errorText ?? 'Something went wrong.';
            const errorPrefix = form.dataset.errorPrefix ?? '✗';
            const successPrefix = form.dataset.successPrefix ?? '✓';

            submitButton.disabled = true;
            submitButton.innerHTML = `
                <span>${sendingText}</span>
                <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            `;

            try {
                const { data, error } = await actions.subscribeToBlog(formData);

                if (messageDiv) {
                    messageDiv.classList.remove('hidden');

                    if (error) {
                        messageDiv.className = 'mt-2 p-3 rounded-md text-sm bg-red-100 text-red-800';
                        messageDiv.textContent = `${errorPrefix} ${error.message}`;
                    } else if (data?.status === 'already') {
                        messageDiv.className = 'mt-2 p-3 rounded-md text-sm bg-amber-100 text-amber-800';
                        messageDiv.textContent = `${successPrefix} ${alreadyText}`;
                    } else {
                        messageDiv.className = 'mt-2 p-3 rounded-md text-sm bg-green-100 text-green-800';
                        messageDiv.textContent = `${successPrefix} ${successText}`;
                        form.reset();
                    }
                }
            } catch (err) {
                if (messageDiv) {
                    messageDiv.classList.remove('hidden');
                    messageDiv.className = 'mt-2 p-3 rounded-md text-sm bg-red-100 text-red-800';
                    messageDiv.textContent = `${errorPrefix} ${errorText}`;
                }
            } finally {
                submitButton.disabled = false;
                submitButton.innerHTML = originalContent;
                setTimeout(() => {
                    messageDiv?.classList.add('hidden');
                }, 5000);
            }
        });
    };

    setupSubscribeForm();
    document.addEventListener('astro:page-load', setupSubscribeForm);
    document.addEventListener('astro:after-swap', setupSubscribeForm);
</script>
