---
import Button from "@/components/ui/buttons/Button.astro";
import GoToAll from "@/components/ui/icons/goToAll.astro";
import nous from "@/assets/videos/nous.webm";
import erlingnails from "@/assets/videos/erlingnails.webm";
import cms from "@/assets/videos/cms.webm";
import apv from "@/assets/apv-api.webp";
import apv_front from "@/assets/videos/apv-mern.webm";
import blogApi from "@/assets/blog-api.webp";
import { defaultLang, translations, type Language } from "@/lib/i18n";
export interface FeaturedProject {
    title: string;
    description: string;
    image: string;
    tags: string[];
    link: string;
    haveRepo: boolean;
    repoLink?: string;
    isVideo?: boolean;
}

const lang = (Astro.locals.lang as Language | undefined) ?? defaultLang;
const t = translations[lang];

const {
    limit,
    showAllLink = true,
    heading = t.featuredProjects.heading,
    description = t.featuredProjects.description,
    viewAllLabel = t.featuredProjects.viewAll,
    headingLevel = 2,
} = Astro.props;

const HeadingTag = headingLevel === 1 ? "h1" : "h2";

const projects: FeaturedProject[] = [
    {
        title: "NOUS",
        description: t.projects.nous.description,
        image: nous,
        tags: [
            "Astro",
            "Typescrypt",
            "PostgreSQL",
            "Tailwind CSS",
            "React.js",
            "Node.js",
        ],
        link: "https://nous.cr",
        haveRepo: false,
        isVideo: true,
    },
    {
        title: "Content Management System",
        description: t.projects.cms.description,
        image: cms,
        tags: [
            "Astro",
            "Typescrypt",
            "PostgreSQL",
            "Tailwind CSS",
            "React.js",
            "Node.js",
        ],
        link: "https://cms-only-test.vercel.app",
        haveRepo: true,
        repoLink: "https://github.com/Alessandro1809/cms-personal-blog",
        isVideo: true,
    },
    {
        title: "Veterinary Patient Management",
        description: t.projects.apvFrontend.description,
        image: apv_front,
        tags: ["React.js", "Javascript", "Axios", "Tailwind CSS"],
        link: "https://frontend-apv-mern.vercel.app/",
        haveRepo: true,
        repoLink: "https://github.com/Alessandro1809/Frontend_APV_MERN",
        isVideo: true,
    },
    {
        title: "Erling Nails",
        description: t.projects.erlingNails.description,
        image: erlingnails,
        tags: [
            "Astro",
            "Typescrypt",
            "PostgreSQL",
            "Tailwind CSS",
            "React.js",
            "Node.js",
        ],
        link: "https://www.erlingnails.com/",
        haveRepo: true,
        repoLink: "https://github.com/Alessandro1809/erling-nails-v1",
        isVideo: true,
    },
    {
        title: "Veterinary patient management API",
        description: t.projects.apvApi.description,
        image: apv.src,
        tags: ["Express.js", "Javascript", "MongoDB", "Email.js", "Node.js"],
        link: "https://apv-docs.netlify.app/",
        haveRepo: true,
        repoLink: "https://github.com/Alessandro1809/MERN_APV_Backend",
        isVideo: false,
    },
    {
        title: "Blog API",
        description: t.projects.blogApi.description,
        image: blogApi.src,
        tags: [
            "Fastify",
            "Typescript",
            "Drizzle",
            "Clerk",
            "Node.js",
            "SQLite",
            "Vitest",
            "Supertest",
        ],
        link: "https://blogapidocs.netlify.app/",
        haveRepo: true,
        repoLink: "https://github.com/Alessandro1809/blog-api",
        isVideo: false,
    },
];

const displayedProjects =
    typeof limit === "number" ? projects.slice(0, limit) : projects;
---

<section
    class="container mx-auto max-w-12xl z-10 relative pb-20 md:pb-32 lg:pb-40 px-4 sm:px-6 md:px-8"
>
    <header
        class="pb-6 md:pb-8 lg:pb-10"
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="100"
        data-aos-once="true"
    >
        <HeadingTag
            class="text-2xl sm:text-3xl md:text-4xl font-bold text-white pb-3 sm:pb-4"
        >
            {heading}
        </HeadingTag>
        <div
            class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 sm:gap-6"
        >
            <p class="text-neutral-400 text-sm sm:text-base max-w-2xl">
                {description}
            </p>

            {
                showAllLink && (
                    <a
                        href="/my-projects"
                        class="flex items-center gap-2 text-neutral-200 hover:underline text-base sm:text-lg md:text-xl whitespace-nowrap"
                    >
                        <p class="text-primary-green">{viewAllLabel}</p>
                        <GoToAll />
                    </a>
                )
            }
        </div>
    </header>
    <article>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            {
                displayedProjects.map((project) => {
                    return (
                        <article class="relative ">
                            {project.haveRepo && (
                                <a
                                    href={project.repoLink}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="absolute top-4 right-4 bg-neutral-600/90 backdrop-blur-sm rounded-full p-2 hover:bg-black/70 transition-all z-50 cursor-pointer hover:scale-105 ease-in-out duration-300 border border-white overflow-hidden"
                                    aria-label={t.featuredProjects.repoAria}
                                    data-aos="fade-up"
                                    data-aos-duration="1000"
                                    data-aos-delay="350"
                                    data-aos-once="true"
                                >
                                    <svg
                                        class="w-5 h-5 text-white"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                    </svg>
                                </a>
                            )}
                            <div class="group">
                                <a
                                    href={project.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    aria-label={project.title}
                                    class="relative block overflow-hidden rounded-xl focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-green/70"
                                    data-aos="fade-up"
                                    data-aos-duration="1000"
                                    data-aos-delay="300"
                                    data-aos-once="true"
                                >
                                    {project.isVideo && (
                                        <video
                                            id="project-video"
                                            autoplay="true"
                                            playback-rate="2"
                                            muted
                                            loop
                                            playsinline
                                            preload="metadata"
                                            src={project.image}
                                            class="rounded-xl w-full group-hover:scale-105 transition-transform ease-in-out duration-300 will-change-transform"
                                        />
                                    )}
                                    {project.isVideo === false && (
                                        <img
                                            src={project.image}
                                            alt={project.title}
                                            class="rounded-xl w-full group-hover:scale-105 transition-transform ease-in-out duration-300 will-change-transform"
                                            loading="lazy"
                                            decoding="async"
                                        />
                                    )}
                                    <div class="absolute bottom-4 left-4 opacity-100 transition-opacity duration-300 lg:opacity-0 md:group-hover:opacity-100 md:group-focus-within:opacity-100">
                                        <span class="inline-flex items-center rounded-md bg-black/70 text-white text-sm sm:text-base font-semibold px-3 py-1.5 backdrop-blur-sm">
                                            {project.title}
                                        </span>
                                    </div>
                                </a>
                                <footer class="mt-3 sm:mt-4">
                                    <div
                                        class="flex items-center gap-2 flex-wrap"
                                        data-aos="fade-up"
                                        data-aos-duration="1000"
                                        data-aos-delay="300"
                                        data-aos-once="true"
                                    >
                                        {project.tags.map((tag) => {
                                            return (
                                                <p class="text-dark-green bg-primary-green rounded-full px-2 py-0.5 sm:px-2 sm:py-1 text-xs sm:text-sm">
                                                    {tag}
                                                </p>
                                            );
                                        })}
                                    </div>
                                </footer>
                            </div>
                            <p
                                class="text-neutral-400 mt-2 text-sm sm:text-base"
                                data-aos="fade-up"
                                data-aos-duration="1000"
                                data-aos-delay="300"
                                data-aos-once="true"
                            >
                                {project.description}
                            </p>
                        </article>
                    );
                })
            }
        </div>
    </article>
</section>

<script>
    document.addEventListener("astro:page-load", () => {
        const videos = document.querySelectorAll("#project-video");
        videos.forEach((video) => {
            video.playbackRate = 2;
        });
    });
</script>
