---
import Button from "@/components/ui/buttons/Button.astro";
import SocialApps from "./SocialApps.astro";
import { defaultLang, translations, type Language } from "@/lib/i18n";

const lang = (Astro.locals.lang as Language | undefined) ?? defaultLang;
const t = translations[lang];
---

<section class="relative z-50">
    <div
        class="h-px w-full bg-linear-to-r from-primary-green via-white to-primary-green mt-52"
    >
    </div>

    <div class="md:flex gap-2 mt-4 flex-col space-y-3 md:flex-row md:space-y-0">
        <Button
            text={t.socialLinks.scheduleMeeting}
            variant="secondary"
            href="/hire-me"
            ariaLabel={t.socialLinks.scheduleMeetingAria}
        />

        <SocialApps />
    </div>
</section>
