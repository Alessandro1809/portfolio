---
import Contact from "@/components/ui/forms/Contact.astro";
import { defaultLang, translations, type Language } from "@/lib/i18n";

const lang = (Astro.locals.lang as Language | undefined) ?? defaultLang;
const t = translations[lang];
---

<section
    class="container mx-auto max-w-12xl relative z-10 pb-20 px-4 sm:px-6 md:px-8"
>
    <header
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="100"
        data-aos-once="true"
    >
        <h2 class="md:text-4xl sm:text-3xl text-2xl font-bold">
            {t.contactSection.heading}
        </h2>
        <p class="text-neutral-400 mt-4 text-lg max-w-4xl">
            {t.contactSection.description}
        </p>
    </header>
    <article
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="100"
        data-aos-once="true"
    >
        <Contact />
    </article>
</section>
